# Example environment variables for ChatrixCD bot
# Copy this file to .env and fill in your values

# Matrix configuration
MATRIX_HOMESERVER=https://matrix.example.com
MATRIX_USER_ID=@chatrixcd:example.com
MATRIX_DEVICE_ID=CHATRIXCD
MATRIX_DEVICE_NAME=ChatrixCD Bot

# Authentication type: password, token, or oidc
MATRIX_AUTH_TYPE=password

# For password authentication
MATRIX_PASSWORD=your_bot_password_here

# For token authentication
# MATRIX_ACCESS_TOKEN=your_access_token_here

# For OIDC authentication
# MATRIX_OIDC_ISSUER=https://auth.example.com
# MATRIX_OIDC_CLIENT_ID=your_client_id
# MATRIX_OIDC_CLIENT_SECRET=your_client_secret

# Store path for encryption keys
MATRIX_STORE_PATH=./store

# Semaphore configuration
SEMAPHORE_URL=https://semaphore.example.com
SEMAPHORE_API_TOKEN=your_semaphore_api_token_here

# Bot configuration
BOT_COMMAND_PREFIX=!cd
BOT_ALLOWED_ROOMS=
BOT_ADMIN_USERS=
